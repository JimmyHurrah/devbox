{
  "packages": [
    "unzip@latest",
    "gnumake@latest",
    "zsh@latest",
    "starship@latest",
    "bat@latest",
    "git@latest",
    "gh@latest",
    "neovim@latest",
    "gcc@latest",
    "ripgrep@latest",
    "yq@latest",
    "tmux@latest",
    "stow@latest",
    "docker@latest",
    "zoxide@latest",
    "fzf@latest",
    "lazygit@latest",
    "go@latest",
    "nodejs@latest",
    "eza@latest",
    "delta@latest",
    "claude-code@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true",
  },
  "shell": {
    "init_hook": null,
    "scripts": {
      "sync": [
        "stow --verbose --dir=./dotfiles --target=$HOME --restow home",
        "devbox global pull ./devbox.json",
        "devbox global shellenv --recompute | source",
      ],
    },
  },
}
