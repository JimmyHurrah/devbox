[user]
	name = Jimmy Hurrah
	email = jimmyhurrah@users.noreply.github.com

[core]
	editor = nvim
	autocrlf=input

[color]
	ui = true

[init]
	defaultBranch = main

[pull]
	rebase = true

[diff]
	tool = nvim 
	colorMoved = zebra

[difftool]
	prompt = false

[fetch]
	prune = true

[remote]
	pushDefault = origin

[credential "https://github.com"]
	helper = 
	helper = !gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !gh auth git-credential

